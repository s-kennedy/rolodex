<div class="container">
	<div class="new_form">

		<% if @contact.errors.any? %>
			<ul>
				<% @contact.errors.full_messages.each do |message| %>
				<li><%=message%></li>
				<%end%>
			</ul>
		<%end%>

		<%= form_for [@contact] do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %><br>

			<%= f.label :email %>
			<%= f.text_field :email %><br>

			<%= f.label :phone %>
			<%= f.text_field :phone %><br>

			<%= f.label :address %>
			<%= f.text_field :address %><br>

			<%= f.label :notes %>
			<%= f.text_field :notes %><br>

			<%= f.submit 'Save' %>
		<%end%>
	</div>
</div>
