<div class="container">
	<div class="col-md-5 col-md-offset-3">
		<div class="row">

			<h1>My Address Book</h1>

		</div>

		<div class="row">
			<div class="search">
				<%= form_tag( '/', method: 'get') do |f| %>

					<%= text_field_tag :query %>
					<%= submit_tag "Search", id: "search" %>
					
				<%end%>
			</div>	
		</div>

		<div class="row">
			<ul class="list-unstyled"><% @results.each do |result| %>
				<li><span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span><%= link_to(result.name, contact_path(result.id))%> </li>
				<% end %>
			</ul>
		</div>

		<div class="row">
			<%= link_to("See everyone", contacts_path, class: "link") %>
			<%= link_to("Add new contact", new_contact_path, class: "link") %>
		</div>

		</div>
	</div>
</div>